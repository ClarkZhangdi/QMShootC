<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/x7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:background="@drawable/main_page_image_view_corner"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/id_iv_artist"
        android:layout_width="@dimen/x164"
        android:layout_height="@dimen/y164"
        android:src="@drawable/b01" />

    <RelativeLayout
        android:id="@+id/id_rl_artist_type"
        android:layout_width="@dimen/x26"
        android:layout_height="@dimen/y26"
        android:layout_marginBottom="@dimen/x8"
        android:layout_marginLeft="@dimen/x8"
        android:background="@drawable/shape_oval_black"
        app:layout_constraintBottom_toBottomOf="@id/id_iv_artist"
        app:layout_constraintLeft_toLeftOf="@id/id_iv_artist">

        <ImageView
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/y10"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_baobanpaishe" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/x68"
        android:layout_height="@dimen/y24"
        android:layout_marginLeft="@dimen/x23"
        android:background="@drawable/image_bottom_color"
        app:layout_constraintBottom_toBottomOf="@id/id_rl_artist_type"
        app:layout_constraintLeft_toLeftOf="@+id/id_rl_artist_type"
        app:layout_constraintTop_toTopOf="@id/id_rl_artist_type">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="爆版摄影"
            android:textColor="@color/colorButtonBackground"
            android:textSize="@dimen/ui_font_12_no" />
    </RelativeLayout>

    <TextView
        app:layout_constraintLeft_toLeftOf="@+id/id_iv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y9"
        android:text="摄影师朱咪咪"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/ui_font_14_no"
        app:layout_constraintTop_toBottomOf="@+id/id_iv_artist" />
</android.support.constraint.ConstraintLayout>