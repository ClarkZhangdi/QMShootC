<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".modules.login.components.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44">

        <ImageView
            android:id="@+id/id_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y20"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="@dimen/y12"
            android:src="@drawable/fanhui" />
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/x276"
        android:layout_height="@dimen/y40"
        android:layout_marginLeft="@dimen/x24"
        android:text="欢迎来到全民摄影"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/ui_font_28_no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y22"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginTop="@dimen/y40"
        android:text="填写手机号"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/ui_font_16_no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginTop="@dimen/y8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x33"
            android:layout_height="@dimen/y25"
            android:layout_marginTop="@dimen/y12"
            android:text="+86"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/ui_font_18_no" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y25"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginTop="@dimen/y12"
            android:background="@null"
            android:hint="请输入11位手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/colorNotFiled"
            android:textSize="@dimen/ui_font_18_no" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/x327"
        android:layout_height="1.5px"
        android:layout_marginLeft="@dimen/x24"
        android:background="@color/colorDivideLine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y22"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginTop="@dimen/y24"
        android:text="输入验证码"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/ui_font_16_no" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginTop="@dimen/y8"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y25"
            android:layout_marginTop="@dimen/y12"
            android:background="@null"
            android:hint="输入验证码"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/colorNotFiled"
            android:textSize="@dimen/ui_font_18_no" />

        <RelativeLayout
            android:layout_width="@dimen/x123"
            android:layout_height="@dimen/y48"
            android:layout_marginLeft="@dimen/x200"
            android:background="@drawable/shape_button_gray_frame"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y25"
                android:text="获取验证码"
                android:textSize="@dimen/ui_font_18_no" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="@dimen/x196"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x24"
        android:background="@color/colorDivideLine" />


    <RelativeLayout
        android:id="@+id/id_rl_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:layout_marginTop="@dimen/y24"
        android:background="@color/colorNotFiled"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y25"
            android:text="登录"
            android:textColor="@color/colorPartButton"
            android:textSize="@dimen/ui_font_18_no" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y17"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y16"
        android:text="未注册的手机号登录时将自动注册，且代表您已同意用户协议"
        android:textColor="@color/colorImportantText"
        android:textSize="@dimen/ui_font_12_no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y22"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y16"
        android:text="切换密码登录"
        android:textColor="@color/colorMain"
        android:textSize="@dimen/ui_font_16_no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y22"
        android:layout_marginTop="@dimen/y98"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y1"
            android:background="@color/colorDivideLine" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y22"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginRight="@dimen/x8"
            android:text="第三方登录"
            android:textColor="@color/colorSupportText"
            android:textSize="@dimen/ui_font_16_no" />

        <View
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y1"
            android:background="@color/colorDivideLine" />
    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y32"
        android:layout_marginTop="@dimen/y20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/y32"
            android:src="@drawable/icon_qq" />

        <ImageView
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/y32"
            android:layout_marginLeft="@dimen/x56"
            android:src="@drawable/icon_wechat" />
    </LinearLayout>
</LinearLayout>