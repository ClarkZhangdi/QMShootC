<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.login.components.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44">

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y20"
            android:src="@drawable/fanhui"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="@dimen/x24"
        android:layout_width="@dimen/x276"
        android:layout_height="@dimen/y40"
        android:text="欢迎来到全民摄影"
        android:textColor="#FF333333"
        android:textSize="28px"
        />
    <TextView
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginTop="@dimen/y40"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/y22"
        android:text="填写手机号"
        android:textColor="#FF333333"
        android:textSize="16px"
        />
    <LinearLayout
        android:layout_marginLeft="@dimen/x24"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y48">
        <TextView
            android:layout_width="@dimen/x33"
            android:layout_height="@dimen/y25"
            android:text="+86"
            android:textColor="#FF32C27C"
            android:textSize="18px"
            />

        <TextView
            android:layout_width="@dimen/x141"
            android:layout_height="@dimen/y25"
            android:hint="请输入11位手机号"
            android:textColor="#FFCCCCCC"
            android:textSize="18px"
            />
    </LinearLayout>
</LinearLayout>