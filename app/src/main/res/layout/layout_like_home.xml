<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x16"
        android:text="猜你喜欢"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/ui_font_20_no"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.clark.qmshootc.modules.main.views.pullrecyclerview.gridview.MainGridView
        android:id="@+id/id_gv_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="2"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_like"></com.clark.qmshootc.modules.main.views.pullrecyclerview.gridview.MainGridView>

</android.support.constraint.ConstraintLayout>