<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v4.view.ViewPager
        android:id="@+id/id_vp_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--存放小圆点的容器-->
    <LinearLayout
        android:id="@+id/id_ll_point_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y7"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y32"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" />

    <!--下方功能入口布局-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/x343"
        android:layout_height="@dimen/y178"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y196"
        android:background="@color/colorButtonBackground">
        <ImageView
            android:id="@+id/id_iv_find_shoot"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />

        <ImageView
            android:id="@+id/id_iv_find_model"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />
        <ImageView
            android:id="@+id/id_iv_find_place"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />
        <ImageView
            android:id="@+id/id_iv_find_dresser"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />
        <ImageView
            android:id="@+id/id_iv_find_wedding"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />
        <ImageView
            android:id="@+id/id_iv_find_bill"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />
        <ImageView
            android:id="@+id/id_iv_find_college"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />
        <ImageView
            android:id="@+id/id_iv_find_video"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />


    </android.support.constraint.ConstraintLayout>


</RelativeLayout>